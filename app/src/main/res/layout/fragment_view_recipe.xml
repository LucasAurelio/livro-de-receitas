<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projetoes.livrodereceitas.fragments.ViewRecipeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da Receita"
                android:id="@+id/view_recipe_name"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Headline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/categories_layout"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_favorite"
                    android:layout_marginRight="10dp"
                    android:id="@+id/favorite_btn"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_favorite"
                    android:layout_marginRight="10dp"
                    android:id="@+id/made_btn"/>


                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_favorite"
                    android:id="@+id/want_btn"/>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredientes:"
                style="@style/text"
                android:layout_marginTop="10dp"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="600px"
                android:id="@+id/view_recipe_ingredients_list"
                android:focusable="true"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo de preparo:"
                style="@style/text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instruções"
                android:id="@+id/view_recipe_instruction"
                android:layout_margin="5dp"
                android:padding="5dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
