    android:layout_centerHorizontal="true"
    android:padding="5dp"
    android:layout_margin="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_ing"
        android:text="0"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_ing"
        android:text="Nome"
        android:layout_margin="5dp"
        android:padding="5dp"/>


</LinearLayout>